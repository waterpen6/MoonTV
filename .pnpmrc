# 允许运行构建脚本以确保依赖正确安装
enable-pre-post-scripts=true

# 允许运行指定包的构建脚本
unsafe-perm=true

# 允许特定包运行构建脚本
@esbuild/linux-x64:allowBuild=true
@esbuild/win32-x64:allowBuild=true
@esbuild/darwin-x64:allowBuild=true
@esbuild/darwin-arm64:allowBuild=true
sharp:allowBuild=true
workerd:allowBuild=true
unrs-resolver:allowBuild=true